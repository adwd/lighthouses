{
  "name": "@stencil/starter",
  "private": true,
  "version": "0.0.1",
  "description": "Stencil App Starter",
  "scripts": {
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "test": "jest",
    "test.watch": "jest --watch",
    "tslint": "tslint -c tslint.json -p tsconfig.json 'src/**/*.{ts,tsx}' --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint -c tslint.json -p tsconfig.json --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@stencil/core": "^0.12.4",
    "@stencil/router": "^0.2.6",
    "firebase": "^5.4.2",
    "primer": "^10.8.1",
    "request": "^2.88.0",
    "rxfire": "^3.0.1",
    "rxjs": "^6.3.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "husky": "^1.0.0-rc.13",
    "install": "^0.12.1",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.2",
    "tslint": "^5.11.0",
    "tslint-ionic-rules": "0.0.19"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ionic-team/stencil-app-starter.git"
  },
  "author": "Ionic Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ionic-team/stencil"
  },
  "homepage": "https://github.com/ionic-team/stencil",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
